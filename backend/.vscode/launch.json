{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "attach",
        "name": "Remote Debug NestJS app in Docker",
        "port": 9999,
        "localRoot": "${workspaceFolder}",
        "remoteRoot": "/app",
        "restart": true,
        "sourceMaps": true,
        "outFiles": [
          "${workspaceFolder}/dist/**/*.js"
        ]
      }
    ]
  }